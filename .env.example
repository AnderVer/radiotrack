# ===========================================
# RadioTrack — Environment Variables
# ===========================================
# Скопируйте этот файл в .env и заполните актуальными значениями
# cp .env.example .env

# -------------------------------------------
# Rails Basic
# -------------------------------------------

# The Rails environment to run in.
RAILS_ENV=development

# Host configuration
HOST=0.0.0.0

# Secret key base for session verification.
# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=dev_secret_key_base_change_in_production

# Devise secret key for token generation
# Generate with: openssl rand -hex 64
DEVISE_SECRET_KEY=dev_devise_secret_key_change_in_production

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------

# Database URL for development (Docker)
DATABASE_URL=postgres://postgres:postgres@db:5432/radiotrack_development

# -------------------------------------------
# OAuth Providers (Optional for development)
# -------------------------------------------

# VK OAuth
# Get credentials from: https://vk.com/editapp?act=create
VK_APP_ID=
VK_APP_SECRET=

# Yandex OAuth
# Get credentials from: https://oauth.yandex.ru/client/new
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=

# Telegram OAuth (optional)
TELEGRAM_BOT_TOKEN=

# -------------------------------------------
# Recognition Service (Fallback, not used in MVP)
# -------------------------------------------

# Recognition provider: "audd" or "acrcloud" (leave empty to disable)
RECOGNITION_PROVIDER=

# AudD.io API token (if using audd)
# Get from: https://audd.io/
AUDD_API_TOKEN=

# Callback URL for recognition webhooks
# For local development: http://localhost:3000/api/recognition/callback
RECOGNITION_CALLBACK_URL=

# -------------------------------------------
# Internal Cron / Jobs
# -------------------------------------------

# Secret for internal API endpoints (ingest, jobs)
# Generate with: openssl rand -hex 32
CRON_SECRET=dev_cron_secret_change_in_production

# -------------------------------------------
# Telegram Bot (Optional)
# -------------------------------------------

# Telegram bot token for notifications
# Get from @BotFather
TELEGRAM_BOT_TOKEN=
